<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/round_button"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/estacaoTituloTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:textColor="#0A2423"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/estacaoDistanciaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:fontFamily="@font/semibold"
        android:textColor="#0A2423"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/estacaoEnderecoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:fontFamily="@font/semibold"
        android:textColor="#0A2423"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/estacaoFuncionamentoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:fontFamily="@font/semibold"
        android:textColor="#0A2423"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/estacaoPrecosTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:fontFamily="@font/semibold"
        android:textColor="#0A2423"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/estacaoPagamentoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:fontFamily="@font/semibold"
        android:textColor="#0A2423"
        android:textSize="12sp" />
</LinearLayout>

